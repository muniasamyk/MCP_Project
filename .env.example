# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=mcp_db

# App Configuration
DEBUG=False
LOG_LEVEL=INFO

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
# API_KEY=your_api_key_here  # Uncomment and set for production

# LLM Configuration (choose one provider: mock, ollama, openai)
MCP_LLM_PROVIDER=ollama
MCP_LLM_MODEL=mistral

# Ollama settings (only if MCP_LLM_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_TIMEOUT_SECONDS=180

# OpenAI settings (only if MCP_LLM_PROVIDER=openai)
# OPENAI_API_KEY=your_key_here
